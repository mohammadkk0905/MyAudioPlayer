<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spacing_small"
    android:layout_marginTop="@dimen/spacing_small"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/grey_300"
    app:cardCornerRadius="8dp">

    <ImageView
        android:id="@+id/imgArtTrackItem"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:background="@color/grey_300"
        android:contentDescription="@null"
        android:scaleType="center"
        app:srcCompat="@drawable/ic_artist" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:background="@color/deep_purple_a200"
        android:orientation="vertical"
        android:padding="2dp">

        <TextView
            android:id="@+id/tvNameItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/vazir_regular"
            android:gravity="center"
            android:includeFontPadding="false"
            android:lineSpacingExtra="0dp"
            android:maxLines="1"
            android:paddingHorizontal="6dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvTrackCountItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:ellipsize="end"
            android:fontFamily="@font/vazir_regular"
            android:gravity="center"
            android:includeFontPadding="false"
            android:lineSpacingExtra="0dp"
            android:maxLines="1"
            android:paddingHorizontal="6dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
            android:textColor="@color/blue_grey_50" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
